generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}
enum subscriptionType{
  EXPERIMENTAL
  MENSAL_1X
  MENSAL_2X
}

model Teacher{
  id Int @id @default(autoincrement())
  name String @db.VarChar(50)
  password String @db.Text
  identifier String @unique @db.VarChar(50)
}
model Student{
  id Int @id @default(autoincrement())
  name String @db.VarChar(255)
  phone String @db.VarChar(20)
  cpf String @db.VarChar(20)
  date_birth DateTime 
  observations String? @db.Text
  created_at DateTime @db.Date @default(now())
  subscription Subscription?
  payments Payment[]
}

model Subscription{
  id Int @id @default(autoincrement())
  student Student @relation(fields: [student_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  student_id Int @unique
  isActive Boolean 
  subscription_type subscriptionType
  start_date DateTime @db.Date @default(now())
  end_date DateTime?
}

model Payment{
  id Int @id @default(autoincrement())
  payment_method String
  value Decimal @db.Decimal(10, 2)
  payment_reason String @db.VarChar(50)
  student Student @relation(fields: [student_id], references: [id], onDelete: SetNull)
  student_id Int @db.Integer
  payment_date DateTime 
}